<Window x:Class="Wpf.Views.TeamOverviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:p = "clr-namespace:Wpf.Resources"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf.Views"
        mc:Ignorable="d"
        Title="{x:Static p:StringResources.teamOverview}" Height="450" Width="500">
    <Border Padding="10 20">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0 0 5 0">
                    <TextBlock Text="{x:Static p:StringResources.favoriteTeam}"></TextBlock>
                    <ComboBox Name="CbFavoriteTeam"/>
                    <Button Padding="5" Margin="0 5 0 0" Content="{x:Static p:StringResources.viewDetails}"/>
                </StackPanel>
                <StackPanel Margin="5 0 0 0" Grid.Column="2">
                    <TextBlock Text="{x:Static p:StringResources.opposingTeam}"></TextBlock>
                    <ComboBox Name="CbOpposingTeam"/>
                    <Button Padding="5" Margin="0 5 0 0" Content="{x:Static p:StringResources.viewDetails}"/>
                </StackPanel>
            </Grid>


        </StackPanel>
    </Border>
</Window>
